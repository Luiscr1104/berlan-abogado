<header
  class="fixed top-0 z-50 w-full transition-all duration-500 bg-transparent"
  id="navbar"
>
  <div class="container mx-auto px-6 h-20 flex items-center justify-between">
    <a href="/" class="flex items-center gap-2 z-50">
      <img
        src="images/LOGO-BERLAN.png"
        alt="Berlan Paniagua Logo"
        width="100"
        height="40"
        class="h-auto brightness-0 invert"
        id="nav-logo"
      />
    </a>

    <!-- Desktop Navigation -->
    <nav
      class="hidden md:flex gap-10 text-sm font-medium tracking-wide first-letter:uppercase"
    >
      {
        ["home", "services", "about", "testimonials", "contact"].map((item) => (
          <a
            href={`/#${item === "home" ? "home" : item}`}
            class="relative group py-2"
          >
            <span class="transition-colors duration-300 text-white/80 group-hover:text-gold uppercase text-[11px] tracking-[0.2em]">
              {item}
            </span>
            <span class="absolute bottom-0 left-0 w-0 h-[1px] bg-gold transition-all duration-300 group-hover:w-full" />
          </a>
        ))
      }
    </nav>

    <div class="hidden md:block">
      <a
        href="#contact"
        class="border border-gold/50 text-gold hover:bg-gold hover:text-navy transition-all duration-300 px-6 py-2 rounded-full text-xs font-bold uppercase tracking-widest"
      >
        Free Consultation
      </a>
    </div>

    <!-- Mobile Toggle -->
    <button
      class="md:hidden z-50 p-2 text-white outline-none"
      id="menu-toggle"
      aria-label="Toggle menu"
    >
      <div
        class="w-6 h-5 relative flex flex-col justify-between overflow-hidden"
      >
        <span
          class="w-full h-[2px] bg-white transition-all duration-300 origin-left"
          id="line1"></span>
        <span
          class="w-full h-[2px] bg-white transition-all duration-300"
          id="line2"></span>
        <span
          class="w-full h-[2px] bg-white transition-all duration-300 origin-left"
          id="line3"></span>
      </div>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="fixed inset-0 bg-navy z-40 flex flex-col items-center justify-center transition-all duration-500 translate-x-full"
  >
    <nav class="flex flex-col items-center space-y-8">
      {
        ["home", "services", "about", "testimonials", "contact"].map((item) => (
          <a
            href={`/#${item === "home" ? "home" : item}`}
            class="text-2xl font-serif text-white/90 hover:text-gold transition-colors mobile-link uppercase tracking-widest"
          >
            {item}
          </a>
        ))
      }
      <a
        href="#contact"
        class="mt-8 border border-gold text-gold px-10 py-4 rounded-full text-sm font-bold uppercase tracking-widest mobile-link"
      >
        Free Consultation
      </a>
    </nav>
  </div>
</header>

<script>
  const menuToggle = document.getElementById("menu-toggle");
  const mobileMenu = document.getElementById("mobile-menu");
  const navbar = document.getElementById("navbar");
  const navLogo = document.getElementById("nav-logo");
  const line1 = document.getElementById("line1");
  const line2 = document.getElementById("line2");
  const line3 = document.getElementById("line3");
  const mobileLinks = document.querySelectorAll(".mobile-link");

  let isMenuOpen = false;

  function toggleMenu() {
    if (!mobileMenu || !line1 || !line2 || !line3) return;
    isMenuOpen = !isMenuOpen;
    mobileMenu.classList.toggle("translate-x-full");
    mobileMenu.classList.toggle("translate-x-0");

    // Animate hamburger
    line1.classList.toggle("rotate-45");
    line1.classList.toggle("translate-y-[2px]");
    line2.classList.toggle("opacity-0");
    line2.classList.toggle("-translate-x-full");
    line3.classList.toggle("-rotate-45");
    line3.classList.toggle("-translate-y-[2px]");

    document.body.style.overflow = isMenuOpen ? "hidden" : "";
  }

  menuToggle?.addEventListener("click", toggleMenu);
  mobileLinks.forEach((link) => link.addEventListener("click", toggleMenu));

  window.addEventListener("scroll", () => {
    if (window.scrollY > 50) {
      navbar?.classList.add("glass", "h-16");
      navbar?.classList.remove("h-20");
    } else {
      navbar?.classList.remove("glass", "h-16");
      navbar?.classList.add("h-20");
    }
  });
</script>
