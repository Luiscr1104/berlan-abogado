            ].map((skill) => (
              <div class="flex items-center gap-4 group p-4 rounded-xl border border-white/5 bg-navy/20 hover:border-gold/30 hover:bg-navy/40 transition-all">
                <div class="bg-gold/10 p-3 rounded-lg text-gold group-hover:scale-110 transition-transform">
                  <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d={skill.icon}
                    />
                  </svg>
                </div>
                <span class="text-sm font-medium text-gray-200 uppercase tracking-wider">
                  {skill.title}
                </span>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
