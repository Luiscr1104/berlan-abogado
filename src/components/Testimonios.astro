---
// testimonios.astro
const testimonials = [
  {
    name: "Carlos Rodríguez",
    role: "Entrepreneur",
    text: "Mr. Paniagua advised me on the constitution of my company. His professionalism and knowledge made the process fast and uncomplicated.",
    stars: 5,
    image: "images/avatar1.png",
  },
  {
    name: "María González",
    role: "Private Client",
    text: "Excellent attention during my legal process. I felt supported and well-advised at all times. I highly recommend his services.",
    stars: 5,
    image: "images/avatar2.png",
  },
  {
    name: "Juan Pérez",
    role: "Real Estate Manager",
    text: "We have worked with Mr. Paniagua on multiple real estate transactions. His precision and efficiency are incomparable. A top-level professional.",
    stars: 5,
    image: "images/avatar3.png",
  },
  {
    name: "Laura Sánchez",
    role: "Chief Financial Officer",
    text: "The legal advice we received for our company was exceptional. Mr. Paniagua has deep and up-to-date legal knowledge.",
    stars: 5,
    image: "images/avatar2.png",
  },
];
---

<section
  id="testimonials"
  class="py-24 md:py-32 bg-navy relative overflow-hidden"
>
  <!-- Decorative Elements -->
  <div
    class="absolute top-0 right-0 w-1/3 h-1/3 bg-gold/5 blur-[120px] rounded-full"
  >
  </div>
  <div
    class="absolute bottom-0 left-0 w-1/4 h-1/4 bg-gold/5 blur-[100px] rounded-full"
  >
  </div>

  <div class="container mx-auto px-6 relative z-10">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span
        class="inline-block px-3 py-1 mb-6 text-[10px] font-bold tracking-[0.3em] text-gold uppercase border border-gold/30 rounded-full"
      >
        Testimonials
      </span>
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
        Our Clients' <span class="text-gold italic font-serif">Trust</span>
      </h2>
      <p class="text-gray-400 text-lg">
        The satisfaction of those who trust us is our best letter of
        introduction.
      </p>
    </div>

    <div class="testimonials-container max-w-5xl mx-auto">
      <div class="relative overflow-hidden">
        <div
          id="testimonial-track"
          class="flex transition-transform duration-700 ease-in-out"
        >
          {
            testimonials.map((testimonio) => (
              <div class="w-full shrink-0 px-4">
                <div class="bg-navy-light/50 backdrop-blur-sm border border-white/5 p-8 md:p-12 rounded-3xl relative">
                  <div class="absolute top-8 right-8 text-gold/20">
                    <svg class="w-20 h-20 fill-current" viewBox="0 0 24 24">
                      <path d="M14.017 21L14.017 18C14.017 16.8954 14.9124 16 16.017 16H19.017C19.5693 16 20.017 15.5523 20.017 15V9C20.017 8.44772 19.5693 8 19.017 8H16.017C15.4647 8 15.017 8.44772 15.017 9V12M14.017 21H6.01704V13C6.01704 10.2386 8.25562 8 11.017 8V11C11.017 12.1046 10.1216 13 9.01704 13H6.01704V21H14.017Z" />
                    </svg>
                  </div>

                  <div class="flex flex-col md:flex-row gap-8 items-center md:items-start relative z-10">
                    <div class="w-24 h-24 rounded-2xl overflow-hidden ring-2 ring-gold/20 shrink-0">
                      <img
                        src={testimonio.image}
                        alt={testimonio.name}
                        class="w-full h-full object-cover"
                      />
                    </div>

                    <div class="flex-1 text-center md:text-left">
                      <div class="flex justify-center md:justify-start gap-1 mb-4">
                        {Array(testimonio.stars)
                          .fill(null)
                          .map(() => (
                            <svg
                              class="w-5 h-5 text-gold fill-current"
                              viewBox="0 0 20 20"
                            >
                              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                            </svg>
                          ))}
                      </div>

                      <p class="text-xl md:text-2xl text-white font-light italic mb-8 leading-relaxed">
                        "{testimonio.text}"
                      </p>

                      <div>
                        <h4 class="text-lg font-bold text-white">
                          {testimonio.name}
                        </h4>
                        <p class="text-gold text-sm tracking-widest uppercase mt-1">
                          {testimonio.role}
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Controls -->
      <div class="flex justify-center items-center gap-8 mt-12">
        <button
          id="prevBtn"
          class="w-12 h-12 rounded-full border border-white/10 flex items-center justify-center text-white hover:bg-gold hover:text-navy hover:border-gold transition-all duration-300"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 19l-7-7 7-7"></path>
          </svg>
        </button>

        <div class="flex gap-2" id="dots-container">
          {
            testimonials.map((_, i) => (
              <button
                class={`w-2 h-2 rounded-full transition-all duration-300 dot ${i === 0 ? "bg-gold w-6" : "bg-white/20"}`}
                data-index={i}
              />
            ))
          }
        </div>

        <button
          id="nextBtn"
          class="w-12 h-12 rounded-full border border-white/10 flex items-center justify-center text-white hover:bg-gold hover:text-navy hover:border-gold transition-all duration-300"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</section>

<script>
  let currentIdx = 0;
  const track = document.getElementById("testimonial-track");
  const dots = document.querySelectorAll(".dot");
  const prevBtn = document.getElementById("prevBtn");
  const nextBtn = document.getElementById("nextBtn");
  const total = dots.length;

  function updateCarousel(idx: number) {
    if (!track) return;
    currentIdx = idx;
    track.style.transform = `translateX(-${currentIdx * 100}%)`;

    dots.forEach((dot, i) => {
      if (i === currentIdx) {
        dot.classList.add("bg-gold", "w-6");
        dot.classList.remove("bg-white/20");
      } else {
        dot.classList.remove("bg-gold", "w-6");
        dot.classList.add("bg-white/20");
      }
    });
  }

  nextBtn?.addEventListener("click", () => {
    updateCarousel((currentIdx + 1) % total);
  });

  prevBtn?.addEventListener("click", () => {
    updateCarousel((currentIdx - 1 + total) % total);
  });

  dots.forEach((dot) => {
    dot.addEventListener("click", () => {
      const idx = parseInt(dot.getAttribute("data-index") || "0");
      updateCarousel(idx);
    });
  });

  // Auto play
  setInterval(() => {
    updateCarousel((currentIdx + 1) % total);
  }, 5000);
</script>
