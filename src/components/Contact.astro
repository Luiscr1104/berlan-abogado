<section id="contacto" class="py-24 md:py-32 bg-navy-light relative">
  <div class="container mx-auto px-6">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-20">
      <!-- Contact Info -->
      <div>
        <span
          class="inline-block px-3 py-1 mb-6 text-[10px] font-bold tracking-[0.3em] text-gold uppercase border border-gold/30 rounded-full"
        >
          Contact
        </span>
        <h2
          class="text-4xl md:text-6xl font-bold text-white mb-8 leading-tight"
        >
          Need <span class="text-gold italic font-serif">Legal Advice?</span>
        </h2>
        <p class="text-gray-400 text-xl font-light mb-12 leading-relaxed">
          We are here to listen and provide the best solution for your
          situation. Contact us today.
        </p>

        <div class="space-y-10">
          {
            [
              {
                title: "Visit Us",
                desc: "Alajuela Province, San Carlos, La Fortuna.",
                icon: "M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z",
              },
              {
                title: "Call Us",
                desc: "+506 8657 2662",
                icon: "M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z",
              },
              {
                title: "Email",
                desc: "berlan.paniagua.notario@gmail.com",
                icon: "M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z",
              },
            ].map((item) => (
              <div class="flex gap-6 group">
                <div class="w-14 h-14 rounded-2xl bg-white/5 border border-white/10 flex items-center justify-center text-gold group-hover:bg-gold group-hover:text-navy transition-all duration-500">
                  <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d={item.icon}
                    />
                  </svg>
                </div>
                <div>
                  <h4 class="text-white font-bold text-lg mb-1">
                    {item.title}
                  </h4>
                  <p class="text-gray-400 font-light">{item.desc}</p>
                </div>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Form -->
      <div class="relative mt-12 lg:mt-0">
        <div class="absolute -inset-4 bg-gold/5 rounded-[40px] blur-2xl"></div>
        <div
          class="relative bg-navy border border-white/10 p-10 md:p-14 rounded-[40px] shadow-2xl"
        >
          <h3 class="text-2xl font-bold text-white mb-8">Send us a message</h3>

          <form id="contactForm" class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="space-y-2">
                <label
                  class="text-[10px] uppercase tracking-widest font-bold text-gold px-1"
                  >Name</label
                >
                <input
                  required
                  type="text"
                  name="name"
                  class="w-full bg-navy-light border border-white/10 rounded-2xl px-6 py-4 text-white focus:border-gold focus:ring-0 transition-colors outline-none"
                />
              </div>
              <div class="space-y-2">
                <label
                  class="text-[10px] uppercase tracking-widest font-bold text-gold px-1"
                  >Email</label
                >
                <input
                  required
                  type="email"
                  name="email"
                  class="w-full bg-navy-light border border-white/10 rounded-2xl px-6 py-4 text-white focus:border-gold focus:ring-0 transition-colors outline-none"
                />
              </div>
            </div>

            <div class="space-y-2">
              <label
                class="text-[10px] uppercase tracking-widest font-bold text-gold px-1"
                >Subject</label
              >
              <input
                required
                type="text"
                name="subject"
                class="w-full bg-navy-light border border-white/10 rounded-2xl px-6 py-4 text-white focus:border-gold focus:ring-0 transition-colors outline-none"
              />
            </div>

            <div class="space-y-2">
              <label
                class="text-[10px] uppercase tracking-widest font-bold text-gold px-1"
                >Message</label
              >
              <textarea
                required
                name="message"
                rows="4"
                class="w-full bg-navy-light border border-white/10 rounded-2xl px-6 py-4 text-white focus:border-gold focus:ring-0 transition-colors outline-none resize-none"
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full bg-gold text-navy font-bold uppercase tracking-[0.2em] text-xs py-5 rounded-2xl hover:bg-gold-light hover:scale-[1.02] active:scale-[0.98] transition-all shadow-xl shadow-gold/10"
            >
              Send Message
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.querySelector("#contactForm") as HTMLFormElement;

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();
    const btn = form.querySelector("button") as HTMLButtonElement;
    const originalText = btn.innerText;

    btn.innerText = "SENDING...";
    btn.disabled = true;

    const formData = new FormData(form);
    const data = Object.fromEntries(formData);

    try {
      const response = await fetch("/api/sendEmail", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(data),
      });

      if (response.ok) {
        alert("Message sent successfully. We will get in touch soon.");
        form.reset();
      } else {
        throw new Error();
      }
    } catch {
      alert("Error sending the message. Please try again.");
    } finally {
      btn.innerText = originalText;
      btn.disabled = false;
    }
  });
</script>
