---
const currentYear = new Date().getFullYear();
---

<footer
  class="bg-navy pt-24 pb-12 border-t border-white/5 relative overflow-hidden"
>
  <!-- Subtle Glow -->
  <div
    class="absolute bottom-0 left-1/2 -translate-x-1/2 w-2/3 h-1/2 bg-gold/5 blur-[120px] rounded-full pointer-events-none"
  >
  </div>

  <div class="container mx-auto px-6 relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-16 lg:gap-8">
      <!-- Brand & Social -->
      <div class="lg:col-span-1">
        <img
          src="/images/logo.png"
          alt="Berlan Paniagua Logo"
          width="120"
          height="50"
          class="h-auto mb-8 brightness-0 invert opacity-90"
        />
        <p class="text-gray-400 font-light leading-relaxed mb-8 max-w-xs">
          Legal and notarial excellence committed to <span
            class="text-gold font-medium">efficiency</span
          > and
          <span class="text-gold font-medium">professionalism</span> in every case.
        </p>
        <div class="flex gap-4">
          {
            ["facebook", "instagram", "linkedin"].map((social) => (
              <a
                href="#"
                class="w-10 h-10 rounded-full bg-white/5 border border-white/10 flex items-center justify-center text-gray-400 hover:bg-gold hover:text-navy hover:border-gold transition-all duration-300"
              >
                <span class="sr-only">{social}</span>
                <svg class="w-5 h-5 fill-current" viewBox="0 0 24 24">
                  <path d="M12 2C6.477 2 2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12c0-5.523-4.477-10-10-10z" />
                </svg>
              </a>
            ))
          }
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-white font-bold uppercase tracking-widest text-xs mb-8">
          Navigation
        </h4>
        <ul class="space-y-4">
          {
            ["Home", "Services", "About", "Testimonials", "Contact"].map(
              (link) => (
                <li>
                  <a
                    href={`/#${link === "About" ? "about" : link.toLowerCase()}`}
                    class="text-gray-400 hover:text-gold transition-colors text-sm font-light"
                  >
                    {link}
                  </a>
                </li>
              ),
            )
          }
        </ul>
      </div>

      <!-- Practice Areas -->
      <div>
        <h4 class="text-white font-bold uppercase tracking-widest text-xs mb-8">
          Practice Areas
        </h4>
        <ul class="space-y-4">
          {
            [
              "Civil Law",
              "Corporate Law",
              "Real Estate",
              "Labor Law",
              "Notarial Services",
            ].map((area) => (
              <li>
                <span class="text-gray-400 text-sm font-light">{area}</span>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h4 class="text-white font-bold uppercase tracking-widest text-xs mb-8">
          Contact
        </h4>
        <ul class="space-y-6">
          <li class="flex gap-4">
            <svg
              class="w-5 h-5 text-gold shrink-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z"
              ></path>
            </svg>
            <span class="text-gray-400 text-sm font-light"
              >La Fortuna, San Carlos, Alajuela, CR.</span
            >
          </li>
          <li class="flex gap-4">
            <svg
              class="w-5 h-5 text-gold shrink-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
            <span class="text-gray-400 text-sm font-light">+506 8657 2662</span>
          </li>
          <li class="flex gap-4">
            <svg
              class="w-5 h-5 text-gold shrink-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            <span class="text-gray-400 text-sm font-light"
              >berlan.paniagua.notario@gmail.com</span
            >
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div
      class="mt-24 pt-8 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-6"
    >
      <div class="flex flex-col items-center md:items-start gap-2">
        <p class="text-gray-500 text-[10px] uppercase tracking-widest">
          &copy; {currentYear} Berlan Paniagua. All rights reserved.
        </p>
        <p class="text-gray-600 text-[9px] uppercase tracking-[0.2em]">
          Design by <a
            href="https://luisroberto.dev"
            target="_blank"
            class="text-gold/60 hover:text-gold transition-colors"
            >luisroberto.dev</a
          >
        </p>
      </div>
      <div class="flex gap-8">
        <a
          href="#"
          class="text-gray-500 hover:text-white transition-colors text-[10px] uppercase tracking-widest"
          >Terms</a
        >
        <a
          href="#"
          class="text-gray-500 hover:text-white transition-colors text-[10px] uppercase tracking-widest"
          >Privacy</a
        >
      </div>
    </div>
  </div>
</footer>
